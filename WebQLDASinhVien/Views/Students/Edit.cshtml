@model WebQLDASinhVien.Models.Student

@{
    ViewData["Title"] = "Chỉnh Sửa Sinh Viên";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1 class="text-center text-info mb-4">Chỉnh Sửa Thông Tin Sinh Viên</h1>

<div class="row">
    <div class="col-md-6 offset-md-3">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="StudentCode" class="font-weight-bold">Mã Sinh Viên</label>
                <input asp-for="StudentCode" class="form-control" placeholder="Nhập mã sinh viên" />
                <span asp-validation-for="StudentCode" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="FullName" class="font-weight-bold">Họ Và Tên</label>
                <input asp-for="FullName" class="form-control" placeholder="Nhập họ và tên" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DateOfBirth" class="font-weight-bold">Ngày Sinh</label>
                <input asp-for="DateOfBirth" class="form-control" placeholder="Nhập ngày sinh (dd/MM/yyyy)" />
                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Address" class="font-weight-bold">Địa Chỉ</label>
                <input asp-for="Address" class="form-control" placeholder="Nhập địa chỉ" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Email" class="font-weight-bold">Email</label>
                <input asp-for="Email" class="form-control" placeholder="Nhập email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PhoneNumber" class="font-weight-bold">Số Điện Thoại</label>
                <input asp-for="PhoneNumber" class="form-control" placeholder="Nhập số điện thoại" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>

            <div class="form-group text-center">
                <input type="submit" value="Lưu Thay Đổi" class="btn btn-primary px-4" />
                <a asp-action="Index" class="btn btn-secondary px-4 ml-2">Quay Lại</a>
            </div>
        </form>
    </div>
</div>
