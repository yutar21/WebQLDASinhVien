@model WebQLDASinhVien.Models.Teacher

@{
    ViewData["Title"] = "Xóa Giáo Viên";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1 class="text-center text-danger mb-4">Xóa Giáo Viên</h1>

<h3 class="text-center">Bạn có chắc chắn muốn xóa giáo viên này?</h3>

<div class="card">
    <div class="card-header bg-danger text-white">
        <h4>Thông Tin Giáo Viên</h4>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3 font-weight-bold">Họ và Tên</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.FullName)</dd>

            <dt class="col-sm-3 font-weight-bold">Email</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>

            <dt class="col-sm-3 font-weight-bold">Bộ môn</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Department)</dd>

            <dt class="col-sm-3 font-weight-bold">Số Điện Thoại</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.PhoneNumber)</dd>

            <dt class="col-sm-3 font-weight-bold">Ngày Sinh</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.DateOfBirth)</dd>

            <dt class="col-sm-3 font-weight-bold">Địa Chỉ</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Address)</dd>
        </dl>
    </div>
</div>

<div class="mt-4 text-center">
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger px-4">
            <i class="fas fa-trash-alt"></i> Xóa
        </button>
        <a asp-action="Index" class="btn btn-secondary px-4 ml-2">
            <i class="fas fa-arrow-left"></i> Quay lại danh sách
        </a>
    </form>
</div>
