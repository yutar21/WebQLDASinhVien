@model WebQLDASinhVien.Models.Project

@{
    ViewData["Title"] = "Xóa đồ án";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h2>Xác nhận xóa đồ án</h2>

<div>
    <h4>Đồ án: @Model.Title</h4>
    <p>Sinh viên: @Model.Student?.FullName</p>
    <p>Giáo viên: @Model.Teacher?.FullName</p>
    <p>Tiến độ: @Model.Progress %</p>
    <p>Phản hồi: @(string.IsNullOrEmpty(Model.Feedback) ? "Chưa có" : Model.Feedback)</p>
</div>

<form asp-action="DeleteConfirmed" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger" onclick="return confirm('Bạn có chắc chắn muốn xóa đồ án này không?');">Xóa</button>
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>
